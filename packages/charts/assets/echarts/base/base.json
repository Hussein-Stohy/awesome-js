{
  "$id": "base.json",
  "title": "ECharts Super Base Schema",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "type": {
      "type": "string",
      "description": "Chart type - accepts any string to avoid merge conflicts"
    },
    "title": { "type": "object" },
    "tooltip": { "type": "object" },
    "legend": { "type": "object" },
    "grid": { "type": "object" },
    "xAxis": { 
      "anyOf": [
        { "type": "object" },
        { "type": "array" }
      ]
    },
    "yAxis": {
      "anyOf": [
        { "type": "object" },
        { "type": "array" }
      ]
    },
    "series": { "type": "array" },
    "visualMap": { "type": "object" },
    "radar": { "type": "object" }
  }
}

