{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Radar Chart Base Schema",
  "type": "object",
  "properties": {
    "type": { "type": "string" },
    "radar": { "type": "object" },
    "series": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "const": "radar" }
        },
        "required": ["type"]
      }
    }
  },
  "required": ["type", "radar", "series"]
}
